<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f5f7">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/user"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@drawable/user"/>
                <Button
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user"
                    android:text="chinaykc"
                    android:textAllCaps="false"
                    android:textSize="24dp"
                    android:background="@null"
                    android:layout_marginLeft="24dp"
                    android:textColor="#333333"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f3f5f7"
                    android:layout_toRightOf="@id/user"
                    android:layout_below="@id/username"></FrameLayout>
                <Button
                    android:id="@+id/sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user"
                    android:layout_below="@id/username"
                    android:text="打卡0天"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:background="@null"
                    android:layout_marginLeft="24dp"
                    android:textColor="#666666"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="24dp">
                        <Button
                            android:id="@+id/history"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/history"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/history"
                            android:text="历史"
                            android:gravity="center"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="24dp">
                        <Button
                            android:id="@+id/mycourse"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/mycourse"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mycourse"
                            android:text="课程"
                            android:gravity="center"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="24dp">
                        <Button
                            android:id="@+id/questions"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/questions"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/questions"
                            android:text="问题"
                            android:gravity="center"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="24dp">
                        <Button
                            android:id="@+id/club"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/club"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/club"
                            android:text="club"
                            android:gravity="center"/>
                    </RelativeLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="#ffffff">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的班级"
                    android:textColor="#666666"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f3f5f7"
                    android:layout_toRightOf="@id/user"
                    android:layout_below="@id/username"></FrameLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="魔币"
                    android:textColor="#666666"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f3f5f7"
                    android:layout_toRightOf="@id/user"
                    android:layout_below="@id/username"></FrameLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的老师"
                    android:textColor="#666666"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f3f5f7"
                    android:layout_toRightOf="@id/user"
                    android:layout_below="@id/username"></FrameLayout>
                <Button
                    android:id="@+id/myLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的水平"
                    android:textColor="#666666"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f3f5f7"
                    android:layout_toRightOf="@id/user"
                    android:layout_below="@id/username"></FrameLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#666666"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f3f5f7"
                    android:layout_toRightOf="@id/user"
                    android:layout_below="@id/username"></FrameLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#666666"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f3f5f7"
                    android:layout_toRightOf="@id/user"
                    android:layout_below="@id/username"></FrameLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#666666"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>