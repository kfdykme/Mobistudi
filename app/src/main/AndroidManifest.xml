<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chinaykc.mobistudi">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="xyz.kfdykme.mobistudi.common.MobiApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".start.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".AllCourses"
            android:label="@string/title_activity_all_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyZone"
            android:label="@string/title_activity_my_zone"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Friends"
            android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MyCollection" />
        <activity android:name=".Feedback" />
        <activity
            android:name=".Learn"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_learn"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".start.StartPage" />
        <activity
            android:name=".start.FirstPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="xyz.kfdykme.mobistudi.activity.CourseListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="xyz.kfdykme.mobistudi.structmap.StructMapActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_course_unit_map"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="xyz.kfdykme.mobistudi.activity.CourseDetailActivity"
            android:label="@string/title_activity_curese_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="xyz.kfdykme.mobistudi.activity.DataZoneActivity"
            android:label="@string/title_activity_personal_zone"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="xyz.kfdykme.mobistudi.question.QuestionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".start.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".studyprogress.StudyProgressActivity" />
        <activity
            android:name="xyz.kfdykme.mobistudi.history.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="cat.mobistudi.CAT" />
        <activity android:name=".AboutUs" />
        <activity android:name=".studyprogress.Progress" />
        <activity android:name="xyz.kfdykme.mobistudi.structmap.settings.StructMapSettingsActivity" />
        <activity android:name=".studyprogress.CourseStudyProgress" />
        <activity android:name=".studyprogress.WebViewTest"></activity>
    </application>

</manifest>